{
    "name": "imahmood/persian-text",
    "description": "A lightweight library for persian language localization.",
    "license": "MIT",
    "keywords": [
        "persian",
        "farsi",
        "persian string",
        "persian text"
    ],
    "authors": [
        {
            "name": "Mahmood Dehghani",
            "email": "mahmood.public@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-intl": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "Imahmood\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Imahmood\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "stan": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
